<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.mere.fragments.FirstFragment"
        android:label="FirstFragment" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />

    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.mere.fragments.SecondFragment"
        android:label="SecondFragment" >
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="nuca" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.mere.fragments.ThirdFragment"
        android:label="ThirdFragment" />
    <fragment
        android:id="@+id/jeiloba"
        android:name="com.example.mere.fragments.jeiloba"
        android:label="jeiloba" />
</navigation>